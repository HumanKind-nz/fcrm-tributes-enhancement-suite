/* FCRM Enhancement Suite - Module Pages Styles */
.toplevel_page_fcrm-enhancements { background: #f1f1f1; }
.fcrm-module-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 30px 20px; margin-bottom: 30px; }
.fcrm-module-header h1 { font-size: 2rem; font-weight: 300; margin: 0 0 10px 0; color: white; }
.nav-tab-wrapper { background: white; border-radius: 12px 12px 0 0; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); }
.tab-content { background: white; border-radius: 0 0 12px 12px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); padding: 30px; }
